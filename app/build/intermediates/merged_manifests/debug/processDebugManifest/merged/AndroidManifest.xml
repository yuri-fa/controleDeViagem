        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_local_shipping"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_local_shipping"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.MainActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.MotoristaActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.VeiculoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.ViagemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.RelatoriosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.crudcomclasse.com.controledeviagemapp.view.ExportacaoRelatorio"
